<%- include('partials/header') %>

<section class="page-section products-section">
    <h2 class="section-title">Our Medicinal Plants & Products</h2>
    
    <!-- Website Interactivity: Search/Filter -->
    <div class="filter-controls">
        <input type="text" id="searchInput" placeholder="Search for a plant or property..." onkeyup="filterProducts()">
        <select id="propertyFilter" onchange="filterProducts()">
            <option value="all">Filter by Property</option>
            <option value="Immunity">Immunity</option>
            <option value="Stress Relief">Stress Relief</option>
            <option value="Anti-inflammatory">Anti-inflammatory</option>
            <option value="Energy Booster">Energy Booster</option>
        </select>
    </div>

    <!-- Product Grid (Populated by JavaScript) -->
    <div class="product-grid js-product-grid">
        <!-- Products will be rendered here by productOOP.js -->
    </div>

    <!-- Hidden data store for client-side JS -->
    <script id="productData" type="application/json">
        <!-- Data is passed from Express server (MongoDB) to EJS template -->
        <%- JSON.stringify(products) %>
    </script>
</section>

<!-- Client-side script for OOP and interactivity -->
<script src="/js/productOOP.js"></script> 

<%- include('partials/footer') %>